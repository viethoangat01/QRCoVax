<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_dialogmain_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/all_avatar_128"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_30" />

        <TextView
            android:id="@+id/textview_dialogmain_nametitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_dialogmain_avatar"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/dialogmain_nametitle"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/colorRaisinBlack"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textview_dialogmain_nametitle"
            android:text="@string/dialogmain_star"
            android:layout_below="@id/textview_dialogmain_avatar"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="@dimen/dp_3" />

        <EditText
            android:id="@+id/edittext_dialogmain_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/colorSonicSilver"
            android:layout_below="@id/textview_dialogmain_nametitle"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:hint="@string/dialogmain_inputhint" />

        <TextView
            android:id="@+id/textview_dialogmain_birthdaytitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edittext_dialogmain_name"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/dialogmain_birthdaytitle"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/colorRaisinBlack"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textview_dialogmain_birthdaytitle"
            android:text="@string/dialogmain_star"
            android:layout_below="@id/edittext_dialogmain_name"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="@dimen/dp_3" />

        <EditText
            android:id="@+id/edittext_dialogmain_birthday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/colorSonicSilver"
            android:layout_below="@id/textview_dialogmain_birthdaytitle"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:hint="@string/dialogmain_inputhint" />

        <TextView
            android:id="@+id/textview_dialogmain_gendertitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edittext_dialogmain_birthday"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/dialogmain_gendertitle"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/colorRaisinBlack"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textview_dialogmain_gendertitle"
            android:text="@string/dialogmain_star"
            android:layout_below="@id/edittext_dialogmain_birthday"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="@dimen/dp_3" />

        <RadioGroup
            android:id="@+id/radiogroup_dialogmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_dialogmain_gendertitle"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">

            <RadioButton
                android:id="@+id/radiobutton_dialogmain_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nam" />

            <RadioButton
                android:id="@+id/radiobutton_dialogmain_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nữ" />

            <RadioButton
                android:id="@+id/radiobutton_dialogmain_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Khác" />
        </RadioGroup>

        <TextView
            android:id="@+id/textview_dialogmain_phonenumbertitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radiogroup_dialogmain"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/dialogmain_phonenumbertitle"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/colorRaisinBlack"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textview_dialogmain_phonenumbertitle"
            android:text="@string/dialogmain_star"
            android:layout_below="@id/radiogroup_dialogmain"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="@dimen/dp_3" />

        <TextView
            android:id="@+id/textview_dialogmain_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/colorGrayX11"
            android:layout_below="@id/textview_dialogmain_phonenumbertitle"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:text="@string/app_name"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/colorRaisinBlack" />

        <TextView
            android:id="@+id/textview_dialogmain_idtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_dialogmain_phonenumber"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/dialogmain_id"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/colorRaisinBlack"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textview_dialogmain_idtitle"
            android:text="@string/dialogmain_star"
            android:layout_below="@id/textview_dialogmain_phonenumber"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="@dimen/dp_3" />

        <EditText
            android:id="@+id/edittext_dialogmain_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/colorSonicSilver"
            android:layout_below="@id/textview_dialogmain_idtitle"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:inputType="number"
            android:hint="@string/dialogmain_inputhint" />

        <TextView
            android:id="@+id/textview_dialogmain_emailtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edittext_dialogmain_id"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/dialogmain_emailtitle"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/colorRaisinBlack"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/edittext_dialogmain_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/colorSonicSilver"
            android:layout_below="@id/textview_dialogmain_emailtitle"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:inputType="textEmailAddress"
            android:hint="@string/dialogmain_inputhint" />

        <View
            android:id="@+id/view_dialogmain_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/colorBrightGray"
            android:layout_below="@id/edittext_dialogmain_email"
            android:layout_marginTop="@dimen/dp_20" />

        <TextView
            android:id="@+id/textview_dialogmain_citytitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_dialogmain_line"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/dialogmain_citytitle"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/colorRaisinBlack"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textview_dialogmain_citytitle"
            android:text="@string/dialogmain_star"
            android:layout_below="@id/view_dialogmain_line"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="@dimen/dp_3" />

        <EditText
            android:id="@+id/edittext_dialogmain_city"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/colorSonicSilver"
            android:layout_below="@id/textview_dialogmain_citytitle"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:hint="@string/dialogmain_inputhint" />

        <TextView
            android:id="@+id/textview_dialogmain_districttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edittext_dialogmain_city"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/dialogmain_districttitle"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/colorRaisinBlack"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textview_dialogmain_districttitle"
            android:text="@string/dialogmain_star"
            android:layout_below="@id/edittext_dialogmain_city"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="@dimen/dp_3" />

        <EditText
            android:id="@+id/edittext_dialogmain_district"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/colorSonicSilver"
            android:layout_below="@id/textview_dialogmain_districttitle"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:hint="@string/dialogmain_inputhint" />

        <TextView
            android:id="@+id/textview_dialogmain_wardttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edittext_dialogmain_district"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/dialogmain_wardtitle"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/colorRaisinBlack"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textview_dialogmain_wardttitle"
            android:text="@string/dialogmain_star"
            android:layout_below="@id/edittext_dialogmain_district"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="@dimen/dp_3" />

        <EditText
            android:id="@+id/edittext_dialogmain_ward"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/colorSonicSilver"
            android:layout_below="@id/textview_dialogmain_wardttitle"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:hint="@string/dialogmain_inputhint" />

        <TextView
            android:id="@+id/textview_dialogmain_villagettitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edittext_dialogmain_ward"
            android:layout_marginTop="@dimen/dp_15"
            android:text="Thôn/Xóm/Số nhà"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/colorRaisinBlack"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textview_dialogmain_villagettitle"
            android:text="@string/dialogmain_star"
            android:layout_below="@id/edittext_dialogmain_ward"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="@dimen/dp_3" />

        <EditText
            android:id="@+id/edittext_dialogmain_village"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/colorSonicSilver"
            android:layout_below="@id/textview_dialogmain_villagettitle"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:hint="@string/dialogmain_inputhint" />

        <Button
            android:id="@+id/button_dialogmain_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_60"
            android:background="@drawable/all_backgroundbutton"
            android:text="@string/dialogmain_saveprofile"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_15"
            android:layout_below="@id/edittext_dialogmain_village" />


    </RelativeLayout>
</ScrollView>
